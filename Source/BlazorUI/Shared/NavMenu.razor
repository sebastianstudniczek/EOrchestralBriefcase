<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Teczka Orkiestrowa</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column border-bottom border-light">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="orchestralbriefcase/create">
                <span class="oi oi-plus"></span> Dodaj teczkę
            </NavLink>
        </li>
    </ul>
    <OrchestralBriefcaseList OrchestralBriefcases="OrchestralBriefcaseViewModel.OrchestralBriefcases"/>
</div>


@code{

    [CascadingParameter]
    public IOrchestralBriefcaseViewModel OrchestralBriefcaseViewModel { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await OrchestralBriefcaseViewModel.GetAllAsync();
    }

    private bool _collapseNavMenu = true;

    public string NavMenuCssClass => _collapseNavMenu ? "collapse" : null;
    public void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }
}
