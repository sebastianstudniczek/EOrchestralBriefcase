<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Teczka Orkiestrowa</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column border-bottom border-light">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="orchestralbriefcases/edit">
                <span class="oi oi-plus"></span> Dodaj teczkę
            </NavLink>
        </li>
    </ul>
    @if (OrchestralBriefcases != null)
    {
        <ul class="nav flex-column">
            @foreach (var orchestralBriefcase in OrchestralBriefcases)
            {
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href=@($"orchestralbriefcases/{orchestralBriefcase.Id}")>
                        <span class="oi oi-list-rich"></span>@orchestralBriefcase.Name
                    </NavLink>
                </li>
            }
        </ul>
    }
</div>
